{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 3
    },
    "price": {
      "type": "decimal",
      "default": 1,
      "min": 1,
      "required": true
    },
    "old_price": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "description": {
      "type": "text",
      "required": true
    },
    "color_variants": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 1
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "type": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::type.type"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "gender": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::gender.gender"
    },
    "character": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::character.character"
    },
    "orders": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::order.order",
      "mappedBy": "products"
    }
  }
}
